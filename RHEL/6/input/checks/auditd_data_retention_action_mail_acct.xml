<def-group>
  <definition class="compliance" id="auditd_data_retention_action_mail_acct" version="3">
    <metadata>
      <title>Auditd Email Account to Notify Upon Action</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <description>action_mail_acct setting in /etc/audit/auditd.conf is set to a certain account</description>
      <reference source="JL" ref_id="RHEL6_20150202" ref_url="test_attestation" />
    </metadata>
    <criteria operator="AND">
        <!-- At least one uncommented 'action_mail_acct' directive present in /etc/audit/auditd.conf? -->
        <criterion test_ref="test_at_least_one_action_mail_acct" comment="Ensure action_mail_acct used at least once" />
        <!-- 'action_mail_acct' set to proper value? -->
        <criterion test_ref="test_auditd_data_retention_action_mail_acct" comment="action_mail_acct set to proper value" />
    </criteria>
  </definition>

  <!-- Ensure there's at least one uncommented 'action_mail_acct' directive present in /etc/audit/auditd.conf -->
  <ind:textfilecontent54_test id="test_at_least_one_action_mail_acct" check="all" comment="At least one action_mail_acct directive present in /etc/audit/auditd.conf" version="1">
    <ind:object object_ref="object_last_action_mail_acct_from_etc_audit_auditd_conf" />
  </ind:textfilecontent54_test>

  <!-- Ensure the last occurrence of 'action_mail_acct' from /etc/audit/auditd.conf is set to proper value -->
  <ind:variable_test id="test_auditd_data_retention_action_mail_acct" check="all" comment="The value of action_mail_acct should be set appropriately in /etc/audit/auditd.conf" version="1">
    <ind:object object_ref="object_last_action_mail_acct_instance_value" />
    <ind:state state_ref="state_last_action_mail_acct_instance_value" />
  </ind:variable_test>

  <ind:textfilecontent54_object id="object_last_action_mail_acct_from_etc_audit_auditd_conf" version="1">
    <!-- Read whole /etc/audit/auditd.conf as single line so we can retrieve last action_mail_acct directive occurrence -->
    <ind:behaviors singleline="true" />
    <ind:filepath>/etc/audit/auditd.conf</ind:filepath>
    <!-- Retrieve last (uncommented) occurrence of action_mail_acct directive -->
    <!-- Allow only space (exactly) as delimiter: https://fedorahosted.org/audit/browser/trunk/src/auditd-config.c#L426 -->
    <!-- Require at least one space before and after the equal sign -->
    <ind:pattern operation="pattern match">.*\n[^#]*(action_mail_acct[ ]+=[ ]+\S+)[ ]*\n</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <!-- Capture the actual action_mail_acct string value from the previously retrieved last instance -->
  <local_variable id="variable_last_action_mail_acct_instance_value" datatype="string" comment="The value of last action_mail_acct directive in /etc/audit/auditd.conf" version="1">
    <regex_capture pattern="action_mail_acct[ ]+=[ ]+(\S+)">
      <object_component item_field="subexpression" object_ref="object_last_action_mail_acct_from_etc_audit_auditd_conf" />
    </regex_capture>
  </local_variable>

  <!-- Construct OVAL object from this local variable so we can use it in variable test above -->
  <ind:variable_object id="object_last_action_mail_acct_instance_value" version="1">
    <ind:var_ref>variable_last_action_mail_acct_instance_value</ind:var_ref>
  </ind:variable_object>

  <!-- Define corresponding variable state (the requirement) for the variable object -->
  <!-- The check should PASS if retrieved last action_mail_acct value is equal to the requirement -->
  <ind:variable_state id="state_last_action_mail_acct_instance_value" version="1">
    <ind:value operation="equals" datatype="string" var_ref="var_auditd_action_mail_acct" var_check="at least one" />
  </ind:variable_state>

  <external_variable comment="audit action_mail_acct setting" datatype="string" id="var_auditd_action_mail_acct" version="1" />

</def-group>
