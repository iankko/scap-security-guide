<def-group>
  <definition class="compliance" id="auditd_data_retention_space_left_action" version="4">
    <metadata>
      <title>Auditd Action to Take When Disk Starting to Run Low on Space</title>
      <affected family="unix">
        <platform>Red Hat Enterprise Linux 6</platform>
      </affected>
      <description>space_left_action setting in /etc/audit/auditd.conf is set to a certain action</description>
      <reference source="JL" ref_id="RHEL6_20150202" ref_url="test_attestation" />
    </metadata>

    <criteria operator="AND">
      <!-- At least one uncommented 'space_lef_action' directive present in /etc/audit/auditd.conf -->
      <criterion test_ref="test_at_least_one_space_left_action" comment="Ensure space_left_action used at least once" />
      <!-- 'space_left_action' set to proper value? -->
      <criterion test_ref="test_auditd_data_retention_space_left_action" comment="space_left_action set to proper value" />
    </criteria>

  </definition>

  <!-- Ensure there's at least one uncommented 'space_left_action' directive present in /etc/audit/auditd.conf -->
  <ind:textfilecontent54_test id="test_at_least_one_space_left_action" check="all" comment="At least one space_left_action directive present in /etc/audit/auditd.conf" version="1">
    <ind:object object_ref="object_last_space_left_action_from_etc_audit_auditd_conf" />
  </ind:textfilecontent54_test>

  <!-- Ensure the last occurrence of 'space_left_action' from /etc/audit/auditd.conf is set to proper value -->
  <ind:variable_test id="test_auditd_data_retention_space_left_action" check="all" comment="The value of space_left_action should be set appropriately in /etc/audit/auditd.conf" version="1">
    <ind:object object_ref="object_last_space_left_action_instance_value" />
    <ind:state state_ref="state_last_space_left_action_instance_value" />
  </ind:variable_test>

  <ind:textfilecontent54_object id="object_last_space_left_action_from_etc_audit_auditd_conf" version="1">
    <!-- Read whole /etc/audit/auditd.conf as single line so we can retrieve last space_left_action directive occurrence -->
    <ind:behaviors singleline="true" />
    <ind:filepath>/etc/audit/auditd.conf</ind:filepath>
    <!-- Retrieve last (uncommented) occurrence of space_left_action directive -->
    <!-- Allow only space (exactly) as delimiter: https://fedorahosted.org/audit/browser/trunk/src/auditd-config.c#L426 -->
    <!-- Require at least one space before and after the equal sign -->
    <ind:pattern operation="pattern match">.*\n[^#]*(space_left_action[ ]+=[ ]+\S+)[ ]*\n</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <!-- Capture the actual space_left_action string value from the previously retrieved last instance -->
  <local_variable id="variable_last_space_left_action_instance_value" datatype="string" comment="The value of last space_left_action directive in /etc/audit/auditd.conf" version="1">
    <regex_capture pattern="space_left_action[ ]+=[ ]+(\S+)">
      <object_component item_field="subexpression" object_ref="object_last_space_left_action_from_etc_audit_auditd_conf" />
    </regex_capture>
  </local_variable>

  <!-- Construct OVAL object from this local variable so we can use it in variable test above -->
  <ind:variable_object id="object_last_space_left_action_instance_value" version="1">
    <ind:var_ref>variable_last_space_left_action_instance_value</ind:var_ref>
  </ind:variable_object>

  <!-- Define corresponding variable state (the requirement) for the variable object -->
  <!-- The check should PASS if retrieved last space_left_action value is case-insensitively equal to the requirement -->
  <ind:variable_state id="state_last_space_left_action_instance_value" version="1">
    <ind:value operation="case insensitive equals" datatype="string" var_ref="var_auditd_space_left_action" var_check="at least one" />
  </ind:variable_state>

  <external_variable comment="audit space_left_action setting" datatype="string" id="var_auditd_space_left_action" version="2" />

</def-group>
